<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/white"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/camera_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Status Bar for Device Connection - Fixed height to prevent layout shift -->
    <LinearLayout
        android:id="@+id/statusLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Status info container with fixed width -->
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/deviceStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thiết bị đã kết nối"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:minHeight="20dp"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/cardStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thẻ đã được rút ra"
                android:textColor="#F44336"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:minHeight="20dp"
                android:ellipsize="end"
                android:maxLines="1"/>
        </LinearLayout>

        <!-- Title with remaining space -->
        <TextView
            android:id="@+id/titleCCCD"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="THÔNG TIN CĂN CƯỚC CÔNG DÂN"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingEnd="12dp"/>
    </LinearLayout>

    <!-- Toggle Button for Camera Mode -->
    <Button
        android:id="@+id/toggleCameraMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toàn màn hình"
        android:textSize="12sp"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/viewFinder"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scan Card Button - Moved to left side -->
    <Button
        android:id="@+id/scanCardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quét thẻ"
        android:textSize="14sp"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#4CAF50"
        android:textColor="@color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/viewFinder"
        app:layout_constraintEnd_toStartOf="@id/toggleCameraMode" />

    <!-- Camera Preview Container - Reduced to 50% height -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/statusLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.6" />

    <!-- Main Info Layout - Expanded for better visibility -->
    <LinearLayout
        android:id="@+id/mainInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/viewFinder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/cardImageView"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start"
            android:paddingEnd="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Số CCCD: " android:textColor="@color/black" android:textStyle="bold" android:textSize="14sp" />
                <TextView android:id="@+id/idCode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black" android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:orientation="horizontal"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Họ và tên: " android:textColor="@color/black" android:textStyle="bold" android:textSize="14sp" /><TextView android:id="@+id/personName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black" android:textSize="14sp" /></LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:orientation="horizontal"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ngày sinh: " android:textColor="@color/black" android:textStyle="bold" android:textSize="14sp" /><TextView android:id="@+id/dateOfBirth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black" android:textSize="14sp" /></LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:orientation="horizontal"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Giới tính: " android:textColor="@color/black" android:textStyle="bold" android:textSize="14sp" /><TextView android:id="@+id/gender" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black" android:textSize="14sp" /></LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:orientation="horizontal"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quốc tịch: " android:textColor="@color/black" android:textStyle="bold" android:textSize="14sp" /><TextView android:id="@+id/nationality" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black" android:textSize="14sp" /></LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:orientation="horizontal"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quê quán: " android:textColor="@color/black" android:textStyle="bold" android:textSize="14sp" /><TextView android:id="@+id/originPlace" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black" android:textSize="14sp" /></LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:orientation="horizontal"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ngày cấp: " android:textColor="@color/black" android:textStyle="bold" android:textSize="14sp" /><TextView android:id="@+id/issueDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black" android:textSize="14sp" /></LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:orientation="horizontal"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ngày hết hạn: " android:textColor="@color/black" android:textStyle="bold" android:textSize="14sp" /><TextView android:id="@+id/expiryDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black" android:textSize="14sp" /></LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- TextView ẩn để lưu ID number từ OCR -->
    <TextView
        android:id="@+id/idNumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>